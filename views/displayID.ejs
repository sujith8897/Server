<%- include('partials/header');-%>

<style type="text/css">
.container-id-card{
    width: 300px;
    height: 500px;
    background-color: bisque;
    display: flex;
    flex-flow: column wrap;
   
    align-items: center;
    border-radius: 10px;
}

.id-card-pic{
    margin-top: 50px;
    width: 150px;
    height: 150px;
    background-color: aqua;
    border-radius: 50%;
   
}
.id-card-content{
    margin-top: 50px;
    height: 200px;
    width: 150px;
   
    flex-flow: column wrap;
    border-radius: 10px;
    background-color: hotpink;
    border-radius: 10px;
 
}

.id-card-name, .id-card-roll, .id-card-hostel{
    width: 80%;
    height: 20%;
    margin-right: 100px;
    margin-top: 10px;
    margin-bottom: 10px;
    background-color: brown;
    display: block;
    border-radius: 10px;
} 
</style>
    



<body>
    <div class="container-id-card">
    <div class="id-card-pic">
        <% var name= id[0].roll+".jpg"  %>
       <img src=<%= name %> style="width:100%; height:100%; border-radius:50%" />
    </div>
    <div class="id-card-content">
        <div class="id-card-name">
        <%=id[0].name%>
        </div><br>
        <div class="id-card-roll">
        <%=id[0].roll%>
        </div><br>
        <div class="id-card-hostel">
        <%=id[0].blockName +"-"+ id[0].roomNo%>
        
        </div>
    </div>
    
    
    
    </div>
</body>
<%- include('partials/footer');-%>