<%- include('partials/header');-%>

  <section id="content-wrapper">
      <div class="row">
        <div class="col-lg-12">
          <h2 class="content-title" style="text-align:center;">Students</h2>

          <% if(data.length==0) { %>

          		<h4>No students</h4>
              <a  href="/hostels"><button class="btn btn-secondary">Go Back</button></a>
              <br>

          <%  }  else {%>
          <div style="text-align:center;">
          <table>
          	<tr>
          		<th>Roll No.</th>
          		<th>Name</th>
          		<th>Room No.</th>
          		<th>Guardian</th>
              <th>Remove</th>
          	</tr>

          	<% for(var i=0;i<data.length;i++) { %>
          		<tr>
          			<td><a href="#"><%= data[i].roll %></a></td>
          			<td><%= data[i].name %></td>
          			<td><%= data[i].roomNo %></td>
          			<td><%= data[i].guardian %></td>
                <td><a href="/del/<%= data[i]._id%>/<%= num %>/<%= room %>"><i class="fa fa-trash-o icon"></i></a></td>
          		</tr>
          	<%  } %>
          </table>
          </div>
         <% }%>
         <br>
         <% if(data.length<5){%>
            <a href="/add/<%= num %>/<%= room %>"><button class="btn btn-warning">Add Student</button></a>
         <%}%>
        </div>
      </div>
  </section>

<%- include('partials/footer');-%>
