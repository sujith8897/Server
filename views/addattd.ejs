
<%- include('partials/header');-%>

  <section id="content-wrapper" class="container">
      <div class="row" >
          <div class="col">
            <h3 style="text-align:center;">Add Attendance for <%=today%> </h3>
            <%  if(data.length>0) { %>
            <form action="addattd" method="POST">
            <input type="date"  value="<%= today%>" disabled><br>
            <input type="date" name="date" value="<%= today%>" hidden><br>
            
            
            <%  for(var i=0;i<data.length;i++) { %>
              
                <input type="checkbox" id="<%= data[i].roll %>" name="<%=data[i].roll%>" value="<%= data[i].roll %>">
                <label for="<%= data[i].roll %>"><%= data[i].roll %></label>

            <% } %>
            <br>
            <button class="btn btn-warning">Submit</button>
            </form>
            <%} else {%>
              <h4>No students available</h4>
              <a href="/dashboard"><button class="btn btn-warning">Home</button></a>
            <% } %>

            


          </div>
      </div>
  </section>

<%- include('partials/footer');-%>
